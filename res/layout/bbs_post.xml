<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bbs_post_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="发表" />

    <EditText
        android:id="@+id/bbs_post_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bbs_post_confirm"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bbs_post_title"
        android:ems="10"
        android:gravity="top"
        android:hint="问题描述"
        android:lines="6" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/bbs_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="问题"
        android:lines="1" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:text="sendBbs" />

</RelativeLayout>